<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nhky.loginAndRegister.dao.LoginAndRegisterDao">
    <!--
 * Created by IntelliJ IDEA.
 * User: 波罗的海
